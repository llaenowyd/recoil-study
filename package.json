{
  "name": "recoil-study",
  "version": "1.0.0",
  "description": "Todo App with Recoil",
  "main": "index.js",
  "scripts": {
    "clean": "run-s clean-packages clean-root",
    "clean-packages": "pnpm --filter * run clean",
    "clean-root": "rimraf node_modules",
    "prepare": "husky install",
    "pretty": "prettier -w .",
    "pretty-quick": "pretty-quick --staged",
    "test": "pnpm --filter * run test",
    "start": "pnpm --filter * run start",
    "start-backend": "pnpm --filter todo-service run start",
    "start-frontend": "pnpm --filter recoil-todo-cra run start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/llaenowyd/recoil-study.git"
  },
  "author": "Collin Monahan <llaenowyd@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/llaenowyd/recoil-study/issues"
  },
  "homepage": "https://github.com/llaenowyd/recoil-study#readme",
  "devDependencies": {
    "husky": "^7.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2"
  }
}
